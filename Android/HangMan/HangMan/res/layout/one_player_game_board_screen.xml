<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_player_one"
    android:gravity="top|center" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="800.0" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="69.0"
            android:gravity="center"
            android:weightSum="480.0" >

            <ImageButton
                android:id="@id/btn_menu_gameboard"
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="120.0"
                android:background="@null"
                android:src="@drawable/arrow_left_1" />

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="2.0px"
                android:layout_weight="240.0" />

            <ImageButton
                android:id="@id/btn_new_gameboard"
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center"
                android:layout_weight="125.0"
                android:background="@null"
                android:src="@drawable/new_game_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="375.0"
            android:weightSum="480.0" >

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="30.0" />

            <RelativeLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:layout_weight="220.0"
                android:gravity="bottom|left" >

                <ImageView
                    android:id="@+id/gallow"
                    android:layout_width="@dimen/hangman_width"
                    android:layout_height="@dimen/hangman_height"
                    android:background="@drawable/gallows_anim_8" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_suggestion"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/margin_top_layout_suggestion"
                android:layout_weight="230.0"
                android:background="@drawable/layout_bg_corner"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" >

                <ListView
                    android:id="@+id/list_suggest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:dividerHeight="5dp"
                    android:src="@android:drawable/screen_background_light" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="20.0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_gravity="top"
            android:layout_weight="45.0"
            android:gravity="center" >

            <LinearLayout
                android:id="@id/word_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="64.0"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="480.0" >

            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="420.0" >

                <LinearLayout
                    android:layout_width="0.0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center" >

                    <ImageView
                        android:id="@id/char_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/a"
                        android:tag="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center" >

                    <ImageView
                        android:id="@id/char_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/b"
                        android:tag="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center" >

                    <ImageView
                        android:id="@id/char_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/c"
                        android:tag="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center" >

                    <ImageView
                        android:id="@id/char_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/d"
                        android:tag="4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center" >

                    <ImageView
                        android:id="@id/char_e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
