<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_home"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tabbar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/actionbar_bg"
        android:gravity="center" >

        <ImageView
            android:id="@+id/img_takt_time_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_book" />

        <ImageView
            android:id="@+id/img_takt_time_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img_takt_time_book"
            android:background="@drawable/ic_export" />

        <ImageView
            android:id="@+id/img_takt_time_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_currency" />

        <ImageView
            android:id="@+id/img_takt_time_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/img_takt_time_currency"
            android:background="@drawable/ic_version" />

        <ImageView
            android:id="@+id/img_takt_time_change_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/img_takt_time_version"
            android:background="@drawable/ic_bag" />

        <ImageView
            android:id="@+id/img_takt_time_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/img_takt_time_change_project"
            android:background="@drawable/ic_setting" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="650dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/bg_task_time" >

        <Button
            android:id="@+id/btn_task_time_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tab_indicator"
            android:text="Cancel" />

        <Button
            android:id="@+id/btn_task_time_dong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tab_indicator"
            android:text="Done" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_task_time_cancel"
            android:layout_alignBottom="@+id/btn_task_time_cancel"
            android:layout_centerHorizontal="true"
            android:text="Takt Time"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <AbsoluteLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="559dp"
                android:layout_height="wrap_content"
                android:layout_x="16dp"
                android:layout_y="71dp"
                android:text="@string/textview_takt_time"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="18dp"
                android:layout_y="177dp"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:hint="Shift Per Day"
                android:lines="2" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="20dp"
                android:layout_y="248dp"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:hint="Days per month"
                android:lines="2" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="257dp"
                android:layout_y="180dp"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:hint="Break per shift"
                android:lines="2" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="256dp"
                android:layout_y="244dp"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:hint="Days per week"
                android:lines="2" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="257dp"
                android:layout_y="307dp"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:hint="Operators per shift"
                android:lines="2" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="225dp"
                android:layout_y="370dp"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:hint="Customer demanded units"
                android:lines="2" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="456dp"
                android:layout_y="378dp"
                android:text="Per"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="24dp" />

            <kankan.wheel.widget.WheelView
                android:id="@+id/wheel_task_time_2"
                android:layout_width="166dp"
                android:layout_height="192dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_x="512dp"
                android:layout_y="235dp" />

            <kankan.wheel.widget.WheelView
                android:id="@+id/wheel_task_time_1"
                android:layout_width="166dp"
                android:layout_height="192dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_x="509dp"
                android:layout_y="442dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="89dp"
                android:layout_y="509dp"
                android:text="Takt Time = XXX"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="50dp" />

        </AbsoluteLayout>
    </RelativeLayout>

</LinearLayout>