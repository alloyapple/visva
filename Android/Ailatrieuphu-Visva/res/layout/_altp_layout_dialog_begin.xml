<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_wrap"
    android:background="@drawable/_altp_bg_dialog" >

    <TextView
        style="@style/layout_wrap"
        android:layout_gravity="center|top"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:text="@string/_txt_msg_dialog_begin"
        android:textColor="@color/color_txt_white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        style="@style/layout_wrap"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="36dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/_layout_dialog_begin_btn_ok"
            style="@style/layout_wrap"
            android:layout_marginRight="8dp"
            android:background="@drawable/altp_btn_menu_"
            android:text="@string/_txt_btn_ok"
            android:textColor="@color/color_txt_menu"
            android:textStyle="bold" />

        <Button
            android:id="@+id/_layout_dialog_begin_btn_dont_known"
            style="@style/layout_wrap"
            android:background="@drawable/altp_btn_menu_"
            android:text="@string/_txt_btn_dont_known"
            android:textColor="@color/color_txt_menu"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>