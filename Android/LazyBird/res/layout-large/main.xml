<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main_menu" >

    <ImageButton
        android:id="@+id/btn_readToMe"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/btn_read_state" />

    <ImageButton
        android:id="@+id/btn_record"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btn_readMyself"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="21dp"
        android:layout_marginRight="193dp"
        android:background="@drawable/btn_record_main_menu_state" />

    <ImageButton
        android:id="@+id/btn_readMyself"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/btn_record"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="103dp"
        android:background="@drawable/btn_read_myself_state" />

</RelativeLayout>