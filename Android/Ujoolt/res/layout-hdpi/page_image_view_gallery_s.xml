<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/camera_preview1"
        android:layout_width="420dp"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/img_view_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right|top"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/flBtnContainer"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right|top"
            android:gravity="right"
            android:visibility="gone" >

            <Button
                android:id="@+id/camera_mode12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_camera_video_off" />

            <Button
                android:id="@+id/camera_type12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/camera_mode"
                android:background="@drawable/ic_object_dynamic" />

            <Button
                android:id="@+id/photo_capture12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/camera_type"
                android:background="@drawable/btn_photo_taken" />

            <Button
                android:id="@+id/flash_mode12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/photo_capture"
                android:background="@drawable/ic_flash" />

            <Button
                android:id="@+id/gallery_camera12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/flash_mode"
                android:background="@drawable/ic_gallery" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_use_img_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_btn_validate" />

            <Button
                android:id="@+id/btn_retake_img_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_btn_cross" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>