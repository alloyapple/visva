<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_title_favourite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableBottom="@color/material_design_color_orange_1"
        android:drawablePadding="1dp"
        android:text="@string/favourite_tab"
        android:textColor="@color/material_design_color_orange_1"
        android:textSize="20sp" />

    <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
        android:id="@+id/coverflow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title_favourite"
        coverflow:coverHeight="@dimen/cover_height"
        coverflow:coverWidth="@dimen/cover_width"
        coverflow:maxScaleFactor="1"
        coverflow:reflectionGap="0px"
        coverflow:rotationThreshold="1"
        coverflow:scalingThreshold="0.5"
        coverflow:spacing="0.5" />

    <include
        android:id="@+id/layout_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coverflow"
        layout="@layout/layout_user_info_options" />

    <RelativeLayout
        android:id="@+id/layout_conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_user_info" >

        <com.baoyz.swipemenulistview.SwipeMenuListView
            android:id="@+id/list_detail_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.baoyz.swipemenulistview.SwipeMenuListView>

        <TextView
            android:id="@+id/text_no_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="No conversations"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>