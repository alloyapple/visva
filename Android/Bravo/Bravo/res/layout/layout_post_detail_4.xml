<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_btn_save"
        android:layout_margin="10dp"
        android:background="@drawable/bt_white"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/height_btn_save"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_btn_save"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/save_bravo_off"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/btn_save" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_btn_save"
            android:background="@drawable/separate_y"
            android:contentDescription="@string/login" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/height_btn_save"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_btn_save"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/share_icon"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/btn_share" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>