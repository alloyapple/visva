<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_setting"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_gravity="center|top"
        android:background="@drawable/black_bar" >

        <Button
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="4dp"
            android:background="@drawable/return_button"
            android:onClick="onReturn" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:text="@string/password_generator_title"
            android:textColor="#FFFFFF"
            android:textStyle="bold" >
        </TextView>
    </FrameLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/all_corner" >
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/all_corner_button"
                android:gravity="center|center"
                android:onClick="onGenerate"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/button_generate"
                android:textStyle="bold" >
            </Button>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/top_corner" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="4dp"
                    android:gravity="left|center"
                    android:text="@string/item_number"
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </TextView>

                <CheckBox
                    android:id="@+id/id_checkbox_number"
                    android:layout_width="96dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/checkbox"
                    android:button="@android:color/transparent" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="1px"
                android:background="@drawable/no_corner" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="4dp"
                    android:gravity="left|center"
                    android:text="@string/item_capital"
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </TextView>

                <CheckBox
                    android:id="@+id/id_checkbox_capital"
                    android:layout_width="96dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/checkbox" android:button="@android:color/transparent" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="1px"
                android:background="@drawable/no_corner" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="4dp"
                    android:gravity="left|center"
                    android:text="@string/item_lower_case"
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </TextView>

                <CheckBox
                    android:id="@+id/id_checkbox_lower_case"
                    android:layout_width="96dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/checkbox" android:button="@android:color/transparent" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="1px"
                android:background="@drawable/no_corner" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="4dp"
                    android:gravity="left|center"
                    android:text="@string/item_sign"
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </TextView>

                <CheckBox
                    android:id="@+id/id_checkbox_sign"
                    android:layout_width="96dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/checkbox" android:button="@android:color/transparent" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="1px"
                android:background="@drawable/no_corner" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="4dp"
                    android:gravity="left|center"
                    android:text="@string/item_duplicate"
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </TextView>

                <CheckBox
                    android:id="@+id/id_checkbox_duplicate"
                    android:layout_width="96dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/checkbox"
                    android:button="@android:color/transparent" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="1px"
                android:background="@drawable/bottom_corner" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="4dp"
                    android:gravity="left|center"
                    android:text="@string/item_number_character"
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </TextView>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/icon_item_shift" >
                </ImageView>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>