<?xml version="1.0" encoding="utf-8"?>
<!-- Tam thoi fix kich thuoc o day, cho tinh kich thuoc cho cac man hinh tab sau -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="252dp"
    android:layout_height="277dp"
    android:background="#ffffff" >
    <View 
    	android:layout_width="82dp"
    	android:layout_height="82dp"
    	android:id="@+id/icon"
    	android:background="#F5C63B"    
        />
	<TextView 
	    android:id="@+id/catelogy"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/icon"
    	android:layout_marginLeft="17dp"
    	android:layout_marginTop="17dp"
    	android:textSize="24sp"
    	android:text="Ăn uống"
    	android:textColor="#2A5C72"
	    />
	<TextView 
	    android:id="@+id/subcatelogy"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/icon"
    	android:layout_below="@id/catelogy"
    	android:layout_marginLeft="16dp"
    	android:textSize="15sp"
    	android:text="Quán ăn, nhậu nhẹt"
    	android:textColor="@android:color/darker_gray"
	    />
	<TextView
	    android:id="@+id/count" 
	    android:layout_width="32dp"
    	android:layout_height="32dp"
    	android:layout_alignParentRight="true"
    	android:background="#ff0000"
	    />
	<View 
	    android:id="@+id/image"
	    android:layout_width="match_parent"
    	android:layout_height="120dp"
    	android:layout_below="@id/icon"
    	android:background="#ff99cc00"
	    />
	<TextView 
	    android:id="@+id/description"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/image"
    	android:layout_marginLeft="12dp"
    	android:layout_marginTop="12dp"
    	android:textSize="20sp"
    	android:text="COCKTAIL POOL BAR"
    	android:textColor="#2A5C72"
	    />
	<TextView 
	    android:id="@+id/subdescription"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/description"
    	android:layout_marginLeft="12dp"
    	android:lines="2"
    	android:textSize="10sp"
    	android:text="ENJOY A DELICIOUS AND FRESHING\nCOCKTAIL AT SB DIAGONAL ZERO. BAR OR POOL"
    	android:textColor="@android:color/darker_gray"
	    />
</RelativeLayout>
