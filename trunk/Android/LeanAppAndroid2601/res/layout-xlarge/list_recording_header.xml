<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:scrollbars="horizontal" >

    <TextView
        android:id="@+id/first_step_recording_text_1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Step Name"
        android:singleLine="true" >
    </TextView>

    <TextView
        android:id="@+id/first_step_recording_text_2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/first_step_recording_text_1"
        android:gravity="center"
        android:text="Cycle 1"
        android:singleLine="true" >
    </TextView>

    <TextView
        android:id="@+id/first_step_recording_text_3"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/first_step_recording_text_2"
        android:gravity="center"
        android:text="Cycle 2"
        android:singleLine="true" >
    </TextView>

    <TextView
        android:id="@+id/first_step_recording_lowest_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/first_step_recording_text_3"
        android:gravity="center"
        android:text="Lowest Time"
        android:singleLine="true" >
    </TextView>

    <TextView
        android:id="@+id/first_step_recording_adjustment"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/first_step_recording_lowest_time"
        android:gravity="center"
        android:text="Adjustment"
        android:singleLine="true" >
    </TextView>

    <TextView
        android:id="@+id/first_step_recording_adjustment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/first_step_recording_adjustment"
        android:gravity="center"
        android:text="Adjustment Time"
        android:singleLine="true" >
    </TextView>

</RelativeLayout>