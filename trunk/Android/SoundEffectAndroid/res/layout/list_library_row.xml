<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_fill_width"
    android:background="@drawable/bg_row_news"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imgLibrary"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@drawable/no_image" />

        <TextView
            android:id="@+id/lblSongName"
            style="@style/textViewWrapBlackMedium"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/imgLibrary"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="Nhu vay nhe"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblSingerName"
            style="@style/textViewWrapBlackSmall"
            android:layout_toRightOf="@id/imgLibrary"
            android:layout_below="@id/lblSongName"
            android:text="Tuan Hung"
            android:textColor="@color/blue"
            android:textSize="12dp"
            android:layout_marginTop="30dp"
            android:gravity="bottom"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lnrPart3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_listen_music"
                 />

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_video" />
    </RelativeLayout>

</LinearLayout>