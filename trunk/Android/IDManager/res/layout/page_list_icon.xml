<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_04"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".ListIconChoiceActivity" >

    <FrameLayout
        android:background="@drawable/black_bar"
        android:id="@+id/action_bar"
        android:layout_height="46dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal" >

        <Button
            android:background="@drawable/bt_return"
            android:layout_gravity="left|center"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_width="36dp"
            android:onClick="onReturn" />

        <TextView
            android:layout_gravity="center|center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/list_icon_title"
            android:textColor="#FFFFFF"
            android:textStyle="bold" >
        </TextView>
    </FrameLayout>

    <ScrollView
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:text="@string/list_carrier_title"
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </TextView>

                <GridView
                    android:columnWidth="90dp"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:id="@+id/gridview_carrier"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:text="@string/list_e_commerce"
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </TextView>

                <GridView
                    android:columnWidth="90dp"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:id="@+id/gridview_e_commerce"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:text="@string/list_isp"
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </TextView>

                <GridView
                    android:columnWidth="90dp"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:id="@+id/gridview_isp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:background="@drawable/black_bar"
        android:layout_height="46dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal" >

        <Button
            android:background="@drawable/album_icon"
            android:layout_gravity="left|center"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_width="36dp"
            android:onClick="onEditImage" />

        <Button
            android:background="@drawable/trash"
            android:layout_gravity="right|center"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="36dp"
            android:onClick="onDeleteImage" />
    </FrameLayout>

</LinearLayout>