<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/setup_master_password"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MasterPasswordActivity" >

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:weightSum="1" >

        <FrameLayout
            android:layout_height="0px"
            android:layout_weight="0.5"
            android:layout_width="fill_parent" >

            <LinearLayout
                android:layout_gravity="center|center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:background="@drawable/all_corner"
                    android:layout_height="32dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="200dp" >

                    <TextView
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:text="@string/old_pass"
                        android:textColor="#000000" >
                    </TextView>

                    <EditText
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_width="fill_parent"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/all_corner"
                    android:layout_height="32dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="200dp" >

                    <TextView
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:text="@string/new_pass"
                        android:textColor="#000000" >
                    </TextView>

                    <EditText
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_width="fill_parent"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:background="@drawable/top_bar"
        android:layout_gravity="center|top"
        android:layout_height="46dp"
        android:layout_width="fill_parent" >

        <Button
            android:background="@drawable/return_button"
            android:layout_gravity="left|center"
            android:layout_height="36dp"
            android:layout_marginLeft="4dp"
            android:layout_width="40dp"
            android:onClick="onReturn" />
    </FrameLayout>

    <Button
        android:background="@drawable/confirm_master_pw"
        android:layout_gravity="right|center"
        android:layout_height="46dp"
        android:layout_marginBottom="34dp"
        android:layout_marginRight="24dp"
        android:layout_width="105dp"
        android:onClick="confirmMaster" >
    </Button>

</FrameLayout>