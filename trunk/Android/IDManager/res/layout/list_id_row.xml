<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@drawable/item_bar" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp" />

    <Button
        android:id="@+id/btn_id_edit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/delete" />

    <TextView
        android:id="@+id/lblSongName"
        style="@style/textViewWrapBlackMedium"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageView1"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="FaceBook"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblSingerName"
        style="@style/textViewWrapBlackSmall"
        android:layout_below="@id/lblSongName"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/imageView1"
        android:ellipsize="marquee"
        android:gravity="bottom"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="http://www.facebook.com"
        android:textColor="@color/blue"
        android:textSize="12sp"
        android:singleLine="true"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lnrPart3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="60dp" >
    </LinearLayout>

</RelativeLayout>