<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_home"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tabbar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/actionbar_bg"
        android:gravity="center" >

        <ImageView
            android:id="@+id/img_takt_time_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_book" />

        <ImageView
            android:id="@+id/img_takt_time_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img_takt_time_book"
            android:background="@drawable/ic_export" />

        <ImageView
            android:id="@+id/img_takt_time_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_currency" />

        <ImageView
            android:id="@+id/img_takt_time_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/img_takt_time_currency"
            android:background="@drawable/ic_version" />

        <ImageView
            android:id="@+id/img_takt_time_change_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/img_takt_time_version"
            android:background="@drawable/ic_bag" />

        <ImageView
            android:id="@+id/img_takt_time_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/img_takt_time_change_project"
            android:background="@drawable/ic_setting" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_task_time" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Takt Time"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Shift Per Day"
            android:lines="2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/editText1"
            android:text="@string/textview_takt_time"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Operators per shift"
            android:lines="2" >
        </EditText>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Break per shift"
            android:lines="2" >
        </EditText>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Days per month"
            android:lines="2" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Days per week"
            android:lines="2" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Customer demanded units"
            android:lines="2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/editText6"
            android:text="Per"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="293dp"
            android:layout_height="146dp"
            android:layout_below="@id/editText6"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:text="Takt Time = XXX"
            android:textSize="50dp" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/wheel_task_time_2"
            android:layout_width="200dp"
            android:layout_height="255dp"
            android:layout_below="@id/editText4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textView3" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/wheel_task_time_1"
            android:layout_width="200dp"
            android:layout_height="243dp"
            android:layout_below="@id/wheel_task_time_2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textView3" />
    </RelativeLayout>

</LinearLayout>