<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="layoutfullwidth_vertical">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="layout_weight_top1">
        <item name="android:layout_weight">180</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="layout_weight_top2">
        <item name="android:layout_weight">205</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="layout_weight_top3">
        <item name="android:layout_weight">180</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="layout_weight_top4">
        <item name="android:layout_weight">90</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="layout_weight_top5">
        <item name="android:layout_weight">145</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="layoutfullwidth_horizal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="textviewfullwidth" parent="fullwidth">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textviewtitle" parent="textviewfullwidth">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>

    <style name="fullwidth">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textview_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="divider">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="lbl_row_title">
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="wrap_width_height">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="layout_fill_width">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="lbl_row_title_header">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="lbl_row_title_small">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btn_action">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="img_icon_top">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">22dp</item>
    </style>

    <style name="layout_action">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/bg_action</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="list_view_common">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
    </style>

</resources>