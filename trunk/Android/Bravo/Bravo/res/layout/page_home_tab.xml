<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title_home"
        android:background="@drawable/navigation_background"
        android:gravity="center_vertical" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_notification_button"
            android:layout_marginLeft="3dp"
            android:background="@drawable/bt_green"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/btn_notification"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_recent_post_title"
        android:background="@drawable/label_recent_post"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/label_recent_post"
            android:textColor="#2B2B2B"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>