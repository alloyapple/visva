<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_background"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:background="@drawable/back_button"
            android:gravity="center"
            android:onClick="onClickBackPersonal"
            android:paddingLeft="@dimen/back_btn_margin_left"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/com_facebook_loginview_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_login_text_view_margin_bottom"
            android:layout_marginTop="@dimen/sns_login_text_view_margin_top"
            android:text="Account"
            android:textColor="@color/grey_3"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD9DC" />

        <TextView
            android:id="@+id/text_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_login_text_view_margin_bottom"
            android:layout_marginTop="@dimen/sns_login_text_view_margin_top"
            android:text="Edit projfile"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD9DC" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_login_text_view_margin_bottom"
            android:layout_marginTop="@dimen/sns_login_text_view_margin_top"
            android:text="Friends"
            android:textColor="@color/grey_3"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD9DC" />

        <TextView
            android:id="@+id/text_share_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_login_text_view_margin_bottom"
            android:layout_marginTop="@dimen/sns_login_text_view_margin_top"
            android:text="Share with friends"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD9DC" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_login_text_view_margin_bottom"
            android:layout_marginTop="@dimen/sns_login_text_view_margin_top"
            android:text="Share"
            android:textColor="@color/grey_3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_separatte_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/text_share"
            android:background="#DAD9DC" />

        <com.facebook.widget.LoginTextView
            android:id="@+id/text_post_on_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_separatte_1"
            android:layout_marginBottom="@dimen/sns_login_text_view_margin_bottom"
            android:drawableLeft="@drawable/facebook_logo"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="Post on Facebook"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/toggle_btn_post_on_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/text_separatte_1" />

        <TextView
            android:id="@+id/text_separatte_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/text_post_on_facebook"
            android:background="#DAD9DC" />
    </RelativeLayout>

</LinearLayout>