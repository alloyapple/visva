<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_btn_save"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_btn_save"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/save_bravo_off"
            android:gravity="center"
            android:paddingTop="6dp"
            android:text="@string/save_pics_button"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/btn_middle"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_btn_save"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/icon_like"
            android:gravity="center"
            android:paddingTop="6dp"
            android:text="@string/save_pics_button"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/btn_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_btn_save"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/share_icon_press"
            android:gravity="center"
            android:paddingTop="6dp"
            android:text="@string/btn_share"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>