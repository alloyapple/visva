<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_setting"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_setting"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblSetting"
            style="@style/text_view_small_bold_white"
            android:layout_width="fill_parent"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="13dp"
            android:text="Setting"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

            <TextView
                android:id="@+id/text_view_push"
                style="@style/text_view_small_normal_white_padding_top_bottom"
                android:text="@string/text_view_push" />

            <ToggleButton
                android:id="@+id/toggle_button_push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_toggle"
                android:checked="true"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_view_share_facebook"
                    style="@style/text_view_small_normal_white"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="3dp"
                    android:text="Partager sur facebook" />

                <TextView
                    android:id="@+id/lblUserNameFacebook"
                    style="@style/text_view_small_normal_white"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="3dp"
                    android:text="Partager sur facebook"
                    android:textColor="@color/blue_facebook"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <ToggleButton
                android:id="@+id/toggle_button_share_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_toggle"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_view_share_twitter"
                    style="@style/text_view_small_normal_white"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="3dp"
                    android:text="Partager sur twitter" />

                <TextView
                    android:id="@+id/lblUserNameTwitter"
                    style="@style/text_view_small_normal_white"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="3dp"
                    android:text="Partager sur twitter"
                    android:textColor="@color/blue_twitter"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <ToggleButton
                android:id="@+id/toggle_button_share_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_toggle"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_about_tutorial"
            style="@style/linear_layout_high_light_selector" >

            <TextView
                android:id="@+id/text_view_turorial"
                style="@style/text_view_small_normal_white_padding_top_bottom"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="Tutorial" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_language"
            style="@style/linear_layout_high_light_selector" >

            <TextView
                android:id="@+id/text_view_language"
                style="@style/text_view_small_normal_white_padding_top_bottom"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="English" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_logout"
            style="@style/linear_layout_high_light_selector" >

            <TextView
                android:id="@+id/text_view_logout"
                style="@style/text_view_small_normal_white_padding_top_bottom"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="DÃ©connexion" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_report_a_problem"
            style="@style/linear_layout_high_light_selector" >

            <TextView
                android:id="@+id/text_view_report_a_problem"
                style="@style/text_view_small_normal_white_padding_top_bottom"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/text_view_report_a_problem" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_about"
            style="@style/linear_layout_high_light_selector" >

            <TextView
                android:id="@+id/text_view_about"
                style="@style/text_view_small_normal_white_padding_top_bottom"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/text_view_about" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_view_close_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_jolt_close" />

</RelativeLayout>