<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/tab_host"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_height"
            android:background="@null" >

            <LinearLayout
                android:id="@+id/bottom_box"
                android:layout_width="match_parent"
                android:layout_height="@dimen/footer_height"
                android:background="@drawable/tab_background"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/btn_contact"
                        android:layout_width="@dimen/width_btn_tab"
                        android:layout_height="@dimen/height_btn_tab"
                        android:layout_gravity="center"
                        android:background="@drawable/bt_home_tab_selected"
                        android:onClick="onClick" />

                    <TextView
                        android:id="@+id/txtview_contact"
                        android:layout_width="@dimen/width_btn_tab"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="@string/contact_tab"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_home_tabs" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/btn_all_record"
                        android:layout_width="@dimen/width_btn_tab"
                        android:layout_height="@dimen/height_btn_tab"
                        android:layout_gravity="center"
                        android:background="@drawable/bt_network_tab_unselected"
                        android:onClick="onClick" />

                    <TextView
                        android:id="@+id/txtview_all_record"
                        android:layout_width="@dimen/width_btn_tab"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="@string/all_record_tab"
                        android:textColor="@color/click_color"
                        android:textSize="@dimen/text_home_tabs" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.gc.materialdesign.views.ButtonRectangle
                        android:id="@+id/btn_favourite"
                        android:layout_width="@dimen/width_btn_tab"
                        android:layout_height="@dimen/height_btn_tab"
                        android:layout_gravity="center"
                        android:background="#f25822"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" >
                    </com.gc.materialdesign.views.ButtonRectangle>

                    <TextView
                        android:id="@+id/txtview_favourite"
                        android:layout_width="@dimen/width_btn_tab"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="@string/favourite_tab"
                        android:textColor="@color/click_color"
                        android:textSize="@dimen/text_home_tabs" />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <fragment
                android:id="@+id/fragment_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.visva.voicerecorder.view.fragments.FragmentContact" />

            <fragment
                android:id="@+id/fragment_all_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.visva.voicerecorder.view.fragments.FragmentAllRecord" />

            <fragment
                android:id="@+id/fragment_favourite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.visva.voicerecorder.view.fragments.FragmentFavourite" />
        </RelativeLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/fragment_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.visva.voicerecorder.view.fragments.FragmentSetting" />

    <fragment
        android:id="@+id/fragment_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.visva.voicerecorder.view.fragments.FragmentAbout" />

    <com.visva.voicerecorder.view.widget.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:fab_addButtonColorNormal="@color/main"
        fab:fab_addButtonColorPressed="@color/main_1"
        fab:fab_addButtonPlusIconColor="@color/white"
        fab:fab_labelStyle="@style/menu_labels_style" >

        <com.visva.voicerecorder.view.widget.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/main"
            fab:fab_colorPressed="@color/main_1"
            fab:fab_icon="@drawable/ic_customer_register"
            fab:fab_size="mini"
            fab:fab_title="@string/contact_tab" />

        <com.visva.voicerecorder.view.widget.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_all_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/main"
            fab:fab_colorPressed="@color/main_1"
            fab:fab_icon="@drawable/ic_customer_create"
            fab:fab_size="mini"
            fab:fab_title="@string/all_record_tab" />

        <com.visva.voicerecorder.view.widget.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/main"
            fab:fab_colorPressed="@color/main_1"
            fab:fab_icon="@drawable/ic_customer_update"
            fab:fab_size="mini"
            fab:fab_title="@string/favourite_tab" />

        <com.visva.voicerecorder.view.widget.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/main"
            fab:fab_colorPressed="@color/main_1"
            fab:fab_icon="@drawable/ic_customer_addimage"
            fab:fab_size="mini"
            fab:fab_title="@string/setting" />

        <com.visva.voicerecorder.view.widget.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/main"
            fab:fab_colorPressed="@color/main_1"
            fab:fab_icon="@drawable/ic_customer_note"
            fab:fab_size="mini"
            fab:fab_title="@string/about" />
    </com.visva.voicerecorder.view.widget.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>