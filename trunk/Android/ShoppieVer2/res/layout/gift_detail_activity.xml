<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout 
        android:layout_width="@dimen/storedetail_item_width"
    	android:layout_height="@dimen/storedetail_item_height"
    	android:layout_centerInParent="true"
        >
        <View 
	    	android:layout_width="match_parent"
	    	android:layout_height="@dimen/gift_item_header_height"
	    	android:id="@+id/image"
	    	android:background="@drawable/round_corner_shape"    
        />
        
        <LinearLayout 
            android:id="@+id/bottombox"
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	    	android:layout_alignParentBottom="true"
	    	android:padding="10dp"
            >
            <TextView 
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:textSize="22sp"
		    	android:text="Chọn quà"
		    	android:textStyle="bold"
		    	android:padding="5dp"
                />
            <RelativeLayout 
	            android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"    
                >
                <Spinner 
		            android:layout_width="match_parent"
			    	android:layout_height="@dimen/actionbar_height"
			    	android:layout_marginRight="70dp"
            	/>
                <Button 
                    android:layout_alignParentRight="true"
                    android:layout_width="70dp"
			    	android:layout_height="@dimen/actionbar_height"
                    />
            </RelativeLayout>
        </LinearLayout>
        
        <TextView
            android:id="@+id/des_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:padding="5dp"
            android:text="Hướng dẫn cách đổi"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottombox"
            android:layout_below="@id/des_title"
            android:padding="5dp"
            android:text="Hướng dẫn cách đổi"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>
