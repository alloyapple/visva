<?xml version="1.0" encoding="utf-8"?>
<!-- Tam thoi fix kich thuoc o day, cho tinh kich thuoc cho cac man hinh tab sau -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="252dp"
    android:layout_height="92dp"
    android:background="@android:color/white" >
    <View 
        android:id="@+id/image"
        android:layout_width="66dp"
    	android:layout_height="66dp"
    	android:layout_marginLeft="13dp"
    	android:layout_marginTop="13dp"
    	android:background="#1BCBA5"
        />
	<TextView 
	    android:id="@+id/like"
	    android:layout_width="66dp"
    	android:layout_height="17dp"
    	android:layout_marginLeft="13dp"
    	android:layout_marginTop="62dp"
    	android:background="#30000000"
	    />
	<TextView 
	    android:id="@+id/title"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/image"
    	android:layout_marginTop="15dp"
    	android:layout_marginLeft="10dp"
    	android:textSize="15sp"
    	android:text="Ăn uống"
    	android:textColor="#2A5C72"
	    />
	<TextView 
	    android:id="@+id/subtitle"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/image"
    	android:layout_below="@id/title"
    	android:layout_marginTop="2dp"
    	android:layout_marginLeft="10dp"
    	android:lines="3"
    	android:textSize="12sp"
    	android:text="Xu hướng THỜI TRANG TRẺ nam nữ 4 mùa. Cập nhật tin tức"
    	android:textColor="@android:color/darker_gray"
	    />
	<TextView
	    android:id="@+id/star" 
	    android:layout_width="32dp"
    	android:layout_height="32dp"
    	android:layout_alignParentRight="true"
    	android:background="#ff0000"
	    />
</RelativeLayout>
