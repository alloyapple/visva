<?xml version="1.0" encoding="utf-8"?>
<!-- Tam thoi fix kich thuoc o day, cho tinh kich thuoc cho cac man hinh tab sau -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_view"
    android:layout_width="@dimen/page_item_width"
    android:layout_height="@dimen/collection_item_height" >

    <View
        android:id="@+id/image"
        android:layout_width="@dimen/collection_item_item_width"
        android:layout_height="@dimen/collection_item_item_height"
        android:layout_marginLeft="@dimen/collection_item_item_marginleft"
        android:layout_marginTop="@dimen/collection_item_item_margintop"
        android:background="#1BCBA5" />

    <RelativeLayout
        android:layout_width="@dimen/collection_item_item_text_width"
        android:layout_height="@dimen/collection_item_item_text_height"
        android:layout_marginLeft="@dimen/collection_item_item_text_marginleft"
        android:layout_marginTop="@dimen/collection_item_item_text_margintop"
        android:background="#30000000" >

        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ic_like"
            android:gravity="center_vertical"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/collection_item_title_marginleft"
        android:layout_marginTop="@dimen/collection_item_title_margintop"
        android:layout_toRightOf="@id/image"
        android:ellipsize="end"
        android:lines="1"
        android:text="Ăn uống"
        android:textColor="#2A5C72"
        android:textSize="@dimen/collection_item_title_textsize" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/collection_item_subtitle_marginleft"
        android:layout_marginTop="@dimen/collection_item_subtitle_margintop"
        android:layout_toRightOf="@id/image"
        android:ellipsize="end"
        android:lines="3"
        android:text="Xu hướng THỜI TRANG TRẺ nam nữ 4 mùa. Cập nhật tin tức"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/collection_item_subtitle_textsize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/collection_devider" />

    <TextView
        android:id="@+id/star"
        android:layout_width="@dimen/collection_item_star_width"
        android:layout_height="@dimen/collection_item_star_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/star" />

</RelativeLayout>