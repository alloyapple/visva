<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/gift_item_row_height"
    android:layout_height="@dimen/gift_item_row_height"
    android:padding="5dp" >
    <TextView 
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/gift_item_name_height"
    	android:textSize="@dimen/gift_item_name_textsize"
    	android:textColor="#CC2A5C72"
		android:id="@+id/name"
		android:layout_alignParentBottom="true"
    	android:gravity="center"
        />
	<ImageView 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_above="@id/name"
    	android:id="@+id/image"
	    />
</RelativeLayout>
