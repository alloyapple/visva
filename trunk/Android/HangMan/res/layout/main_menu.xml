<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main_menu"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/lines_top"
        android:orientation="vertical" >

        <Button
            android:id="@id/btn_one_player"
            android:layout_width="@dimen/btn_size_width"
            android:layout_height="@dimen/btn_size_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/btn_margin_top"
            android:background="@drawable/menu_button_one_player"
            android:soundEffectsEnabled="false" />

        <Button
            android:id="@id/btn_two_players"
            android:layout_width="@dimen/btn_size_width"
            android:layout_height="@dimen/btn_size_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/btn_margin_top"
            android:background="@drawable/menu_button_two_player"
            android:soundEffectsEnabled="false" />

        <Button
            android:id="@id/btn_options"
            android:layout_width="@dimen/btn_size_width"
            android:layout_height="@dimen/btn_size_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/btn_margin_top"
            android:background="@drawable/menu_button_options"
            android:soundEffectsEnabled="false" />

        <Button
            android:id="@id/btn_more_games"
            android:layout_width="@dimen/btn_size_width"
            android:layout_height="@dimen/btn_size_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/btn_margin_top"
            android:background="@drawable/menu_button_more_games"
            android:soundEffectsEnabled="false" />
    </LinearLayout>

</LinearLayout>