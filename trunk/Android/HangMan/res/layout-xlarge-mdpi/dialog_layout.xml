<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:gravity="top|center"
    android:orientation="vertical"
    android:theme="@style/Theme.GameDialog" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30.0px"
        android:layout_marginTop="35.0px"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@id/image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <ImageView
                android:id="@id/imgresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loose_game"
                android:soundEffectsEnabled="false" />
        </RelativeLayout>

        <ImageButton
            android:id="@id/gamecontinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="10.0px"
            android:background="@android:color/transparent"
            android:padding="5.0dip"
            android:soundEffectsEnabled="false"
            android:src="@drawable/ok_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0px"
        android:orientation="vertical" >

        <TextView
            android:id="@id/txtresult"
            android:layout_width="240.0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:lines="1"
            android:text="Player 1 "
            android:textColor="#ffdee66c"
            android:textSize="14.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/txt_word"
            android:layout_width="240.0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:lines="1"
            android:text="WORD:"
            android:textColor="#ffffffff"
            android:textSize="14.0sp" />
    </LinearLayout>

</LinearLayout>